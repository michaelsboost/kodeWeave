{
  "name": "kodeweave",
  "version": "1.2.4",
  "type": "module",
  "scripts": {
    "build:css": "postcss src/bundle.css -o dist/style.css",
    "build:js": "esbuild src/concat.js --bundle --minify --sourcemap --outfile=dist/App.min.js",
    "build:c": "rollup -c",
    "build": "npm-run-all build:css build:c build:js",
    "serve": "http-server -c-1 -p 8081"
